@model List<HotelSystem.Models.Room>
@{
    ViewBag.Title = "Index";
}

<div class="page">
    <div id="room">

        <div class="header">
            <div class="row">
                <div class="col-9">
                    <h1><i class="fas fa-hotel"></i>Otaq Siyahısı</h1>
                </div>
                <div class="col-3 text-right">
                    <a href="@Url.Action("create","room")" class="btn btn-success">Otaq Yarat</a>
                </div>

            </div>
        </div>

        <div class="room-list">
            <table class="table table-hover">
                <thead>
                    <tr style="background-color:black; color:white;">
                        <th>Şəkil</th>
                        <th>Təsvir</th>
                        <th>Otaq Nömrəsi</th>
                        <th>Böyük sayı</th>
                        <th>Uşaq sayı</th>
                        <th>Yataq sayı</th>
                        <th>Qiymət</th>
                        <th>Tənzimləmər</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="photo">
                                    <img src="~/Uploads/@item.Photo" alt="">
                                </div>
                            </td>
                            <td>
                                <h6>@item.Description</h6>
                            </td>
                            <td>
                                <h6>@item.Number</h6>
                            </td>
                            <td>
                                <h6>@item.AdultCapacity nəfər</h6>
                            </td>
                            <td>
                                <h6>@item.ChildCapacity nəfər</h6>
                            </td>
                            <td>
                                <h6>@item.BedType.Name nəfərlik</h6>
                            </td>
                            <td>
                                <h6 class="price p-1" style="border-radius:5px">@String.Format("{0:N0}", item.Price) AZN</h6>
                            </td>
                            <td>
                                <a href="@Url.Action("edit", new { id=item.Id})" class="btn btn-primary mb-1" style="width:90px;">Yenilə</a>
                                <a onclick="return confirm('Are you sure to delete Room No: @item.Number?')" href="@Url.Action("delete", new { id=item.Id})" class="btn btn-danger">Sil</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>



    </div>
</div>

